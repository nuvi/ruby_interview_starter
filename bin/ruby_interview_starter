#!/usr/bin/env ruby

require_relative '../lib/ruby_interview_starter'
require 'thor'

module RubyInterviewStarter
  class CLI < Thor
    desc "execute", "Executes Interview Starter"
    def execute
      puts "This is the Ruby Interview Starter cli script, It will now start downloading your files..."
      RubyInterviewStarter.execute
    end
  end
end

::RubyInterviewStarter::CLI.start(ARGV)
